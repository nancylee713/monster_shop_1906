<center>
  <%= form_for [@merchant, @coupon] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, value: @coupon.generate_code %>

    <%= f.label :value %>
    <%= f.text_field :value %>

    <%= f.check_box :is_percent, {}, "true", "false" %> <%= f.label "%" %> <br />

    <%= f.label :item_id %>
    <%= f.select(:item_id, @merchant.items.collect{|i| [i.name, i.id]}, {}, { :class => 'merchant_items_dropdown' }) %>

    <%= f.hidden_field :merchant_id, value: @merchant.id %>

    <%= f.submit %>
  <% end %>
</center>
