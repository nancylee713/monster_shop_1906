<table>
  <tr>
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Subtotal</th>
    <th>Sold By</th>
    <th>Inventory</th>
  </tr>

  <% cart.items.each do |item, quantity| %>
    <tr id='order-item-<%= item.id%>'>
      <td><h4><%= link_to item.name, "/items/#{item.id}" %></h4></td>
      <td><p><%= number_to_currency(item.price) %></p></td>
      <td><p><%= quantity %></p></td>
      <td><p><%= number_to_currency(cart.subtotal(item)) %></p></td>
      <td><p><%= link_to item.merchant.name, "/merchants/#{item.merchant_id}" %></p></td>
      <td><p><%= item.inventory %> in stock</p></td>
    </tr>
  <% end %>
  <tr id="order-total">
    <td colspan=1><h3>Total</h3></td>
    <td colspan=5 id="order-grandtotal"><h3><%= number_to_currency(cart.total)%></h3></td>
  </tr>
</table>
